<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="CENTER" style="-fx-spacing: 15px;" styleClass="background" stylesheets="@../css/menu_stylesheet.css" type="VBox" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Help">
         <font>
            <Font name="Manaspace" size="50.0" />
         </font>
         <styleClass>
            <String fx:value="menuTitle" />
            <String fx:value="manaspaceFontWhite" />
         </styleClass>
      </Label>
      <VBox alignment="CENTER">
         <children>
            <Label text="General">
               <styleClass>
                  <String fx:value="helpSubheading" />
                  <String fx:value="manaspaceFontWhite" />
               </styleClass>
            </Label>
         </children>
      </VBox>
      <VBox alignment="CENTER">
         <children>
            <Label text="Single Player">
               <styleClass>
                  <String fx:value="helpSubheading" />
                  <String fx:value="manaspaceFontWhite" />
               </styleClass>
            </Label>
         </children>
      </VBox>
      <VBox alignment="CENTER">
         <children>
            <Label text="Multiplayer">
               <styleClass>
                  <String fx:value="helpSubheading" />
                  <String fx:value="manaspaceFontWhite" />
               </styleClass>
            </Label>
         </children>
      </VBox>
      <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonPress" text="Back">
         <font>
            <Font name="Manaspace" size="22.0" />
         </font>
         <styleClass>
            <String fx:value="manaspaceFontWhite" />
            <String fx:value="backButton" />
         </styleClass>
      </Button>
   </children>
</fx:root>

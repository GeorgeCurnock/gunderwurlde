<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="CENTER" prefHeight="400.0" prefWidth="600.0" style="-fx-spacing: 15px;" stylesheets="@../css/menu_stylesheet.css" type="VBox" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Play">
         <font>
            <Font name="Consolas" size="50.0" />
         </font>
         <styleClass>
            <String fx:value="menuTitle" />
            <String fx:value="manaspaceFont" />
         </styleClass>
      </Label>
      <Label styleClass="manaspaceFont" text="Enter Name and Press Enter:">
         <font>
            <Font name="Consolas" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="nameField" alignment="CENTER" onAction="#handleNameInput" promptText="Enter here..." style="-fx-max-width: 400;" styleClass="manaSpaceFontNoColour">
         <font>
            <Font name="Consolas" size="26.0" />
         </font>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </TextField>
      <Label fx:id="characterErrorText" alignment="CENTER" prefHeight="32.0" prefWidth="523.0" styleClass="manaspaceFontRed" text="Name has to be up to 11 characters!" textAlignment="CENTER" textFill="#e50b0b" visible="false">
         <font>
            <Font name="Consolas" size="22.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="59.0" prefWidth="600.0" style="-fx-spacing: 10px;">
         <children>
            <Button fx:id="singlePlayerButton" disable="true" mnemonicParsing="false" onAction="#singlePlayerButtonPress" text="Single Player">
               <font>
                  <Font name="Consolas" size="22.0" />
               </font>
               <styleClass>
                  <String fx:value="manaspaceFont" />
                  <String fx:value="menuButton" />
               </styleClass>
            </Button>
            <Button fx:id="multiPlayerButton" disable="true" mnemonicParsing="false" onAction="#multiPlayerButtonPress" text="Multiplayer">
               <font>
                  <Font name="Consolas" size="22.0" />
               </font>
               <styleClass>
                  <String fx:value="manaspaceFont" />
                  <String fx:value="menuButton" />
               </styleClass>
            </Button>
         </children>
      </HBox>
      <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonPress" style="-fx-background-radius: 0px;" text="Back">
         <font>
            <Font name="Consolas" size="22.0" />
         </font>
         <styleClass>
            <String fx:value="manaspaceFont" />
            <String fx:value="backButton" />
         </styleClass>
      </Button>
   </children>
</fx:root>
